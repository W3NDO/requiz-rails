<div id="<%= dom_id subtopic %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Topic name:</strong>
    <%= subtopic.topic_name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this subtopic", subtopic, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this subtopic', edit_subtopic_path(subtopic), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
