<div class="my-8 rounded border p-10 h-1/3 flex-col overflow-y-scroll justify-between">
    <div class="w-full flex justify-around items-center py-4 h-2/3">
        <span class="w-full font-semibold text-xl md:text-3xl text-center text-white"> <%= question.question %> </span>
    </div> <!-- TODO add a toggle to show the correct answer. Doing this will forfeit a score being applied to the quiz. -->
    <div class="w-full flex justify-center flex-col md:flex-row flex-wrap p-2 mb-8 items-stretch h-1/3 overflow-y-scroll">
        <% question.possible_answers.shuffle.each do |ans| %>
            <%= button_tag(type: "button", 
                class: "active:bg-flashBlue active:text-white md:max-w-1/3 md:w-1/3 w-full my-1 grow rounded-lg py-2 px-1 mx-2 bg-white", 
                data: {
                    reflex: "click->Quiz#check_answer", 
                    :qid => question.id, 
                    :order => order,
                    :next_index => next_index,
                    :my_answers => my_answers,
                    :correct_answer_count => correct_answer_count,
                    :ans => ans}) do %>
                <span class="text-center text-black font-semibold px-5"> <%= ans %> </span>
            <% end %>
        <% end %>
    </div>
</div>