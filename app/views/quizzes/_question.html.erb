<div class="my-8 rounded border p-10 h-fit md:h-4/5 flex-col justify-between">
    <div class="w-full flex justify-around items-center py-8">
        <span class="w-full font-semibold text-3xl text-center text-white"> <%= question.question %> </span>
    </div>
    <div class="w-full flex flex-col p-5 mb-8 items-center h-2/3 overflow-y-scroll">
        <% question.possible_answers[..3].each do |ans| %>
            <%= button_tag(type: "button", 
                class: "md:max-w-1/3 w-1/3 rounded-sm py-2 px-1 m-2 bg-white overflow-ellipsis", 
                data: {
                    reflex: "click->Quiz#check_answer", 
                    :qid => question.id, 
                    :order => order,
                    :next_index => next_index,
                    :my_answers => my_answers,
                    :correct_answer_count => correct_answer_count,
                    :ans => ans}) do %>
                <span class="text-center text-black font-semibold px-5"> <%= ans %> </span>
            <% end %>
        <% end %>
    </div>
</div>