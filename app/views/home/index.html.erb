<% menu_options = { :home => "", :quiz => "", :flashcards => "", :my_tags => "" }%>

<div class="bg-gradient-to-tr cursor-default from-flashBlue to-testGreen h-screen w-full overflow-hidden max-h-screen lg:grid grid-cols-7 grid-rows-7">
    <nav class=" w-full flex flex-col md:flex-row justify-between col-start-1 col-end-8">
        <div id="logo" class="w-full">
            <div class="w-full bg-gradient-to-r from-gray-500 to-transparent px-2">
                <%= image_tag("logo_dark", size: 35, class: "md:py-2")%>
            </div>
        </div>

        <div id="menu_list" class="w-full ">
            <ul class="w-full md:py-2 flex flex-col md:flex-row justify-around bg-gradient-to-l from-gray-500 to-transparent">
                <% menu_options.each do |option, action| %>
                    <li> 
                        <%= button_tag(type="button", class: "cursor-pointer") do %>
                            <span class="font-sans3 text-2xl font-bold"> <%= option.to_s.titleize %> </span>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>

    <aside id="focus_nav"> <!-- Hidden unless there is a quiz, flashcard, or notes set in focus-->
        <!-- Needs a close button and an open button? -->
    </aside>

    <div id="main_content"> <!-- This is where we render all the content -->

    </div>

</div>