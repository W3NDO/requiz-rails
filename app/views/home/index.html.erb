<div class="w-full h-full max-h-90 grid grid-cols-6">
    <aside class="m-2 col-start-1 col-end-3 grid grid-rows-6 overflow-y-scroll max-h">
        <div data-controller="timer" class="row-start-1 row-end-2 border border-gray-500 mb-1 flex flex-col p-2 rounded-md shadow-md shadow-gray-500">
            <button type="button" class="p-2 flex items-center border-white hover:border-gray-700 rounded-md hover:shadow-md" data-reflex="click->Application#yet_to_implement">
                <span class="font-bold mx-3 text-lg"> <%= icon("fa-regular", "user") %> </span>
                <span class=" font-semibold"><%= "@#{current_user.handle}##{current_user.public_id}" %> </span>
            </button>

            <div class="flex justify-between">
                <button data-action="click->timer#toggleTimes" type="button" class="p-2 border flex items-center border-white hover:border-gray-700 rounded-full hover:shadow-md" data-reflex="click->Application#yet_to_implement">
                    <span class="font-bold mx-3 text-lg"> <%= icon("fa-solid", "stopwatch") %> </span>
                    <span class=" font-semibold"> Start A Timer </span>
                </button>

                <div class="flex items-center">
                    <button data-action="click->timer#startRefreshing"
                        data-timer-target="isPaused"
                        class="mx-1 p-1 border border-green-500 rounded-full">
                            <%= icon("fa-solid", "play", class: "text-green-500 px-2") %>
                    </button>

                    <span data-timer-refresh-interval-value="1000"
                        data-timer-target="clock"
                        data-timer-time-value="0"
                        class="font-bold p-2 text-blue-500 border-white hover:border-gray-700 rounded-md hover:shadow-md">
                            00:00
                    </span>
                </div>
            </div>

            <div class="justify-around hidden" data-timer-target="timersList">
                <%= render(partial: "home/timer_options", locals: {}) %>
            </div>
        </div>

        <div class="row-start-2 row-end-7 border border-gray-500 rounded-md shadow-md shadow-gray-500 mt-1 p-2 overflow-y-scroll">
            <div class="flex justify-between border-b-2 border-gray-500 p-2">
                <span class="font-bold p-1"> My Topics </span>
                <%= button_tag(type: "button", data: { reflex:"click->HomeReflex#new_object_view", partial_path: "topics/form", model: "topic" }, class: "p-1 bg-blue-500 rounded text-center rounded-full") do %>
                    <span class="text-white font-semibold flex justify-around"> + Add a new topic </span>
                <% end %>
            </div>

            <div class="overflow-y-scroll max-h-80 " id="topics_bar">
                <%= render(partial: "home/topics_bar", locals: {topics: @topics}) %>
            </div>

            <div id="currentFocus">
                <input type="hidden" value="" />
            </div>
        </div>
    </aside>

    <div id="main_container" class="border border-gray-500 rounded-md shadow-md shadow-gray-500 m-2 col-start-3 col-end-7 max-h-full">
    </div>

    <div class="flex justify-between w-full col-start-1 col-end-7">
        <%= button_tag "test normal dialog",
            type: "button",
            data: {
                reflex: "click->Shared::NotificationModalReflex#show_dialog",
                partial_path: "topics/form",
                sub_locals: {
                    model: "topic"
                    }
                },
            class: "m-2 p-2 bg-blue-600 text-white font-semibold rounded-lg" %>
        <%= button_tag "test confirm dialog", type: "button", data: { reflex: "click->Shared::NotificationModalReflex#show_confirmation_dialog", }, class: "m-2 p-2 bg-blue-600 text-white font-semibold rounded-lg" %>
    </div>
</div>
