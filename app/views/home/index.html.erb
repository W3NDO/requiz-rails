<% menu_options = { :home => "", :quiz => "", :flashcards => "", :my_tags => "" } %>

<div class="bg-gradient-to-l cursor-default from-flashBlue to-black h-screen w-full overflow-hidden max-h-screen lg:grid grid-cols-7 grid-rows-7">
    <nav class=" w-full flex flex-col md:flex-row justify-around col-start-1 col-end-8">
        <div id="logo" class="w-full">
            <div class="w-full px-2 flex justify-around">
                <%= image_tag("logo_dark", size: "100x35", class: "md:py-2")%>
            </div>
        </div>

        <div id="menu_list" class="w-full ">
            <ul class="w-full md:py-2 flex flex-col md:flex-row justify-around">
                <% menu_options.each do |option, action| %>
                    <li> 
                        <%= button_tag(type="button", class: "cursor-pointer w-full") do %>
                            <span class="font-sans3 text-white text-2xl font-bold"> <%= option.to_s.titleize %> </span>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>

    <div id="main_content" class="w-full col-start-1 col-end-8 row-start-2 row-end-4"> <!-- This is where we render all the content -->
        <%= render(partial: "home/landing", locals: {}) %>
    </div>

</div>