<div class ="flex flex-col border px-5 py-2 rounded border-gray-300 items-center shadow-md shadow-gray-400" >
  <h2 class="mb-5 text-lg font-bold">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col items-center mb-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "rounded"%>
    </div>

    <div class="actions flex justify-around">
      <%= f.submit "Send me reset password instructions", class: "bg-flashBlue p-2 rounded m-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
